<MyPopup@Popup>:
    title:"Choose organism"
    auto_dismiss: False
    size_hint: None,None
    size: 200,300




<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: app.text


<BoardInterface>:
    name: "boardinterface"
    Widget:
        CustomButton:
            text: "Save"
            pos: 270, 145
            on_press:
                app.get_world().save()
        CustomButton:
            on_press:
                app.perform_round()
                root.clear()
            text: "Next turn"
            pos: 200, 145

        CustomButton:
            text: "Load"
            pos: 340, 145
            on_press:
                app.get_world().load()
                app.text=""
        CustomButton:
            text: "Skill"
            pos: 270, 770
            on_press:
                app.get_world().activate_skill()

        ScrollableLabel:
            pos:0,10
            size: 600,100
            text: ""

        Label:
            pos:140,145
            size: 60,20
            text: app.dir

        Label:
            pos:140,770
            size: 60,20
            text: app.info


<Dialog>:
    size:100,100
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "World type :"
            BoardToggle:
                text: 'Grid'
                group: 'board'
                state: 'down'
            BoardToggle:
                id:hex
                text: 'Hex'
                group: 'board'
        BoxLayout:
            Label:
                text: "Size(x,y) :"
            NumberInput:
                id:width
                multiline: False
            NumberInput:
                id:height
                multiline: False

        CustomButton:
            text: "Ok"
            on_press:
                root.manager.current = "boardinterface"
                root.create_world(width.text, height.text, hex.state)




